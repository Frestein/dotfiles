  "spacing": 4,
  "reload_style_on_change": true,
  "modules-left": ["image#distro", "hyprland/submap", "tray"],
  "modules-center": ["hyprland/workspaces"],
  "modules-right": [
    "mpd",
    "hyprland/language",
    "wireplumber",
    "custom/brightness",
    "cpu",
    "memory",
    "temperature",
    "network",
    "clock",
