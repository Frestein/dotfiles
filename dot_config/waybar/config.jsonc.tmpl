  "image#distro": {
    "path": "/usr/share/archlinux/icons/archlinux-icon-crystal-256.svg",
    "size": 14
  },
  "hyprland/workspaces": {
    "all-outputs": true,
    "format": "{id}"
  },
  "hyprland/language": {
    "format": "ÔÑú {short}",
