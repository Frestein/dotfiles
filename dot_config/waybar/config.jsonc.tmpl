    "format": "üß© {}",
    "max-length": 16,
    "tooltip": false
  },
  "idle_inhibitor": {
    "format": "{icon}",
    "format-icons": {
      "activated": "ÔÅÆ ",
      "deactivated": "ÔÅ∞ "
    },
    "tooltip-format-activated": "Idle: {status}",
    "tooltip-format-deactivated": "Idle: {status}"
  },
  "wireplumber": {
    "format": "{icon} {volume}%",
    "format-muted": "Û∞ùü",
    "format-icons": ["Û∞ïø", "Û∞ñÄ", "Û∞ïæ"],
    "on-click": "{{ .chezmoi.destDir }}/.config/hypr/scripts/volume.sh --toggle",
    "menu": "on-click-right",
    "menu-file": "{{ .chezmoi.destDir }}/.config/waybar/modules/audio.xml",
    "menu-actions": {
      "settings": "pavucontrol"
    },
    "max-volume": 100,
    "scroll-step": 2.0
  },
  "mpd": {
    //"format": "{stateIcon} {consumeIcon}{randomIcon}{repeatIcon}{singleIcon}{artist} - {title} ÔÄÅ",
    "format": "ÔÄÅ {artist} - {title}",
    "format-disconnected": "ÔÄÅ Disconnected",
    //"format-stopped": "{consumeIcon}{randomIcon}{repeatIcon}{singleIcon}Stopped ÔÄÅ",
    "format-stopped": "ÔÄÅ Stopped",
    "unknown-tag": "N/A",
    "interval": 5,
    "exec-if": "pgrep mpd",
    "consume-icons": {
      "on": "ÔÉÑ "
    },
    "random-icons": {
      "off": "<span color=\"#f53c3c\">ÔÅ¥</span> ",
      "on": "ÔÅ¥ "
    },
    "repeat-icons": {
      "on": "ÔÄû "
    },
    "single-icons": {
      "on": "ÔÄû1 "
    },
    "state-icons": {
      "paused": "ÔÅå",
      "playing": "ÔÅã"
    },
    "tooltip-format": "{artist} - {album} - {title}",
    "tooltip-format-disconnected": "MPD (disconnected)",
    "max-length": 50,
    "on-click": "mpc toggle",
    "on-click-right": "footclient --app-id 'foot-mp-flt'  ncmpcpp -s visualizer -S playlist",
    "on-scroll-up": "mpc next",
    "on-scroll-down": "mpc prev"
  },
  "tray": {
    "spacing": 10
  },
  "clock": {
    "interval": 60,
    "tooltip": true,
    "format": "Û±ëé {:%I:%M}",
    "tooltip-format": "ÔÅ≥ {:%A, %B %d %Y}"
