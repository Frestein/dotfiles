include ./themes/gruvbox-light-hard

set selection-clipboard clipboard
set guioptions none
set database sqlite

# Side-by-side mode
map D set "first-page-column 1:1"
map <A-d> set "first-page-column 1:2"

# Smooth scrolling
map j feedkeys "<C-Down>"
map k feedkeys "<C-Up>"

